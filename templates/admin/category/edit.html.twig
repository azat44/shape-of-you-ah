{% extends 'base.html.twig' %}

{% block title %}{{ isNew ? 'Nouvelle catégorie' : 'Modifier la catégorie' }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex items-center mb-6">
        <a href="{{ path('app_admin_category_index') }}" class="text-blue-500 hover:text-blue-700 mr-4">
            &larr; Retour à la liste
        </a>
        <h1 class="text-2xl font-bold">{{ isNew ? 'Nouvelle catégorie' : 'Modifier la catégorie' }}</h1>
    </div>
    
    <div class="bg-white shadow rounded-lg p-6 max-w-lg">
        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>
            
            <div class="mb-4">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500', 'rows': 4}}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>
            
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                    {{ isNew ? 'Créer' : 'Enregistrer' }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}