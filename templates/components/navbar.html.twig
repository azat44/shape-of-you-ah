<script>
    document.getElementById('user-menu-button')?.addEventListener('click', function() {
        document.getElementById('user-menu').classList.toggle('hidden');
    });
    
    document.addEventListener('click', function(event) {
        const userMenu = document.getElementById('user-menu');
        const userMenuButton = document.getElementById('user-menu-button');
        
        if (!userMenu || !userMenuButton) return;
        
        if (!userMenu.contains(event.target) && !userMenuButton.contains(event.target)) {
            userMenu.classList.add('hidden');
        }
    });
    
    const themeToggle = document.getElementById('theme-toggle');
    if (themeToggle) {
        const htmlElement = document.documentElement;
        const themeIcon = document.getElementById('theme-icon');
        const themes = ['default', 'dark', 'theme-one', 'theme-two'];
        const themeIcons = {
            'default': { icon: 'fa-sun', color: 'text-yellow-500' },
            'dark': { icon: 'fa-moon', color: 'text-blue-300' },
            'theme-one': { icon: 'fa-palette', color: 'text-pink-500' },
            'theme-two': { icon: 'fa-leaf', color: 'text-green-500' }
        };
        
        let currentTheme = localStorage.getItem('theme') || 'default';
        if (!themes.includes(currentTheme)) {
            currentTheme = 'default';
        }
        
        function updateThemeIcon(theme) {
            themeIcon.className = '';
            themeIcon.classList.add('fas', themeIcons[theme].icon, themeIcons[theme].color);
        }
        
        function applyTheme(theme) {
            htmlElement.classList.remove(...themes.filter(t => t !== 'default'));
            
            if (theme !== 'default') {
                htmlElement.classList.add(theme);
            }
            
            localStorage.setItem('theme', theme);
            currentTheme = theme;
            
            updateThemeIcon(theme);
        }
        
        applyTheme(currentTheme);
        
        themeToggle.addEventListener('click', function() {
            const currentIndex = themes.indexOf(currentTheme);
            const nextIndex = (currentIndex + 1) % themes.length;
            const nextTheme = themes[nextIndex];
            
            applyTheme(nextTheme);
        });
    }
    
    if (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
        if (document.getElementById('theme-icon')) {
            document.getElementById('theme-icon').className = '';
            document.getElementById('theme-icon').classList.add('fas', 'fa-moon', 'text-blue-300');
        }
        localStorage.setItem('theme', 'dark');
    }
</script>
