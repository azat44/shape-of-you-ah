{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin | Shape of You{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 dark:text-white">Dashboard Admin</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-blue-500 text-white p-4 rounded-lg shadow">
            <h2 class="font-medium mb-1">Utilisateurs</h2>
            <p class="text-3xl font-bold">{{ stats.users }}</p>
        </div>
        
        <div class="bg-green-500 text-white p-4 rounded-lg shadow">
            <h2 class="font-medium mb-1">Vêtements</h2>
            <p class="text-3xl font-bold">{{ stats.items }}</p>
        </div>
        
        <div class="bg-purple-500 text-white p-4 rounded-lg shadow">
            <h2 class="font-medium mb-1">Tenues</h2>
            <p class="text-3xl font-bold">{{ stats.outfits }}</p>
        </div>
        
        <div class="bg-yellow-500 text-white p-4 rounded-lg shadow">
            <h2 class="font-medium mb-1">Tenues partagées</h2>
            <p class="text-3xl font-bold">{{ stats.shared_outfits }}</p>
        </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
            <h2 class="text-xl font-semibold mb-4 dark:text-white">Évolution des utilisateurs</h2>
            <div class="chart-container" style="position: relative; height: 300px;">
                <canvas id="userGrowthChart"></canvas>
            </div>
        </div>
        
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
            <h2 class="text-xl font-semibold mb-4 dark:text-white">Notifications</h2>
            <div class="overflow-y-auto max-h-64">
                {% if notifications is empty %}
                    <p class="text-gray-500 dark:text-gray-400 text-center py-4">Aucune notification</p>
                {% else %}
                    <table class="w-full">
                        <tbody>
                        {% for notification in notifications %}
                            <tr class="border-b dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-800">
                                <td class="px-4 py-2 dark:text-white">{{ notification.message }}</td>
                                <td class="px-4 py-2 dark:text-gray-300">{{ notification.createdAt|date('d/m/Y H:i') }}</td>
                                <td class="px-4 py-2">
                                    <span class="px-2 py-1 rounded-full text-xs
                                        {% if notification.status == 'new' %}bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200
                                        {% elseif notification.status == 'pending' %}bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200
                                        {% else %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200
                                        {% endif %}
                                    ">
                                        {{ notification.status }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
    
    {% if aiInsights %}
    <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow mt-6">
        <h2 class="text-xl font-semibold mb-4 dark:text-white">Insights IA</h2>
        <p class="dark:text-white">{{ aiInsights|raw }}</p>
    </div>
    {% endif %}
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Graphique de croissance des utilisateurs
        const userCtx = document.getElementById('userGrowthChart');
        new Chart(userCtx, {
            type: 'line',
            data: {
                labels: {{ userGrowthData.labels|json_encode|raw }},
                datasets: [{
                    label: 'Nouveaux utilisateurs',
                    data: {{ userGrowthData.data|json_encode|raw }},
                    borderColor: 'rgb(59, 130, 246)',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    });
    
    // Réinitialiser les graphiques si la fenêtre est redimensionnée
    window.addEventListener('resize', function() {
        setTimeout(function() {
            Chart.instances.forEach(chart => {
                chart.resize();
            });
        }, 100);
    });
</script>
{% endblock %}