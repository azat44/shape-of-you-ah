{% extends 'base.html.twig' %}

{% block title %}Modifier le vêtement | Shape of You{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold dark:text-white">Modifier le vêtement</h1>
        <a href="{{ path('app_clothing_item_index') }}" class="text-blue-600 dark:text-blue-400 hover:underline">
            <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
        </a>
    </div>
    
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
        <div class="p-6">
            {{ form_start(form) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white'}}) }}
                        {{ form_errors(form.category) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white', 'rows': '3'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.color, 'Couleur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.color, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white'}}) }}
                        {{ form_errors(form.color) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.style, 'Style', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.style, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white'}}) }}
                        {{ form_errors(form.style) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.price, 'Prix (€)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.price, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white'}}) }}
                        {{ form_errors(form.price) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.imageUrl, 'URL de l\'image', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.imageUrl, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white'}}) }}
                        {{ form_errors(form.imageUrl) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.partnerLink, 'Lien partenaire', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                        {{ form_widget(form.partnerLink, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white'}}) }}
                        {{ form_errors(form.partnerLink) }}
                    </div>
                </div>
                
                <div class="flex justify-end">
                    <button type="submit" class="px-4 py-2 bg-primary-dark hover:bg-primary text-white rounded">
                        Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    
    <div class="mt-6 text-right">
        <form method="post" action="{{ path('app_clothing_item_delete', {'id': clothing_item.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce vêtement?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clothing_item.id) }}">
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">
                Supprimer le vêtement
            </button>
        </form>
    </div>
</div>
{% endblock %}
