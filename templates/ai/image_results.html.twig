{% extends 'base.html.twig' %}

{% block title %}Résultats d'Analyse | Shape of You{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto">
    <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden p-6">
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold dark:text-white">Résultats de l'Analyse</h1>
            <a href="{{ path('app_ai_image_analyze') }}" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600">
                <i class="fas fa-arrow-left mr-2"></i> Nouvelle analyse
            </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h2 class="text-lg font-semibold mb-4 dark:text-white">Votre image</h2>
                <div class="bg-gray-100 dark:bg-gray-700 rounded-lg overflow-hidden">
                    <img src="{{ imagePath }}" alt="Tenue analysée" class="w-full h-auto">
                </div>
            </div>
            
            <div>
                <h2 class="text-lg font-semibold mb-4 dark:text-white">Éléments détectés</h2>
                
                {% if detectedItems|length > 0 %}
                    <div class="space-y-4">
                        {% for item in detectedItems %}
                            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 shadow">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h3 class="font-medium dark:text-white">{{ item.name }}</h3>
                                        <p class="text-sm text-gray-600 dark:text-gray-400">
                                            Catégorie: {{ item.category }} | 
                                            Couleur: {{ item.color }} | 
                                            Style: {{ item.style }}
                                        </p>
                                        <div class="mt-1">
                                            <div class="w-full bg-gray-200 rounded-full h-2">
                                                <div class="bg-primary-dark h-2 rounded-full" style="width: {{ (item.confidence * 100)|round }}%"></div>
                                            </div>
                                            <p class="text-xs text-right text-gray-500 dark:text-gray-400">
                                                Confiance: {{ (item.confidence * 100)|round }}%
                                            </p>
                                        </div>
                                    </div>
                                    <div>
                                        <button class="px-3 py-1 bg-primary-dark text-white text-sm rounded-md hover:bg-primary add-to-wardrobe"
                                                data-name="{{ item.name }}"
                                                data-category="{{ item.category }}"
                                                data-color="{{ item.color }}"
                                                data-style="{{ item.style }}">
                                            <i class="fas fa-plus mr-1"></i> Ajouter
                                        </button>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    <div class="mt-6">
                        <button id="add-all-btn" class="w-full px-4 py-2 bg-green-600 hover:bg-green-500 text-white rounded-md">
                            <i class="fas fa-plus-circle mr-2"></i> Ajouter tous les éléments à ma garde-robe
                        </button>
                    </div>
                {% else %}
                    <div class="text-center py-8">
                        <i class="fas fa-exclamation-circle text-yellow-500 text-4xl mb-4"></i>
                        <h3 class="text-xl font-bold mb-2 dark:text-white">Aucun élément détecté</h3>
                        <p class="text-gray-600 dark:text-gray-400">
                            L'IA n'a pas pu détecter d'éléments dans cette image. Essayez avec une autre photo.
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.add-to-wardrobe').forEach(button => {
        button.addEventListener('click', function() {
            const data = {
                name: this.dataset.name,
                category: this.dataset.category,
                color: this.dataset.color,
                style: this.dataset.style
            };
            

            this.innerHTML = '<i class="fas fa-check mr-1"></i> Ajouté';
            this.classList.remove('bg-primary-dark', 'hover:bg-primary');
            this.classList.add('bg-green-600');
            this.disabled = true;
        });
    });
    
    document.getElementById('add-all-btn')?.addEventListener('click', function() {
        document.querySelectorAll('.add-to-wardrobe').forEach(button => {
            if (!button.disabled) {
                button.click();
            }
        });
        
        this.innerHTML = '<i class="fas fa-check mr-2"></i> Tous les éléments ont été ajoutés';
        this.classList.remove('bg-green-600', 'hover:bg-green-500');
        this.classList.add('bg-gray-500');
        this.disabled = true;
    });
</script>
{% endblock %}